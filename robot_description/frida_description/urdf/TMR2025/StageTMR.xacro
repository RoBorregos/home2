<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="simple_bowl">

  <!-- Define the mesh path and the scale as properties -->
  <xacro:property name="bowl_mesh" value="$(find frida_description)/urdf/meshes/TMR2025/Stage_TMR.stl"/>
  <xacro:property name="mesh_scale" value="0.001 0.001 0.001"/>  <!-- Scale property -->

  <link name="bowl_link">

    <!-- Visual using STL -->
    <visual>
      <geometry>
        <mesh filename="file://${bowl_mesh}" scale="${mesh_scale}"/>  <!-- Use the scale property -->
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>

    <!-- Collision using the same mesh -->
    <collision>
      <geometry>
        <mesh filename="file://${bowl_mesh}" scale="${mesh_scale}"/>  <!-- Use the scale property -->
      </geometry>
    </collision>

    <!-- Inertial properties -->
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
        ixx="0.001" ixy="0.0" ixz="0.0"
        iyy="0.001" iyz="0.0"
        izz="0.001"/>
    </inertial>

  </link>

  <!-- Gazebo Material -->
  <gazebo reference="bowl_link">
    <material>Gazebo/Yellow</material>
  </gazebo>

</robot>
